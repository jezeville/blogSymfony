{% extends 'base.html.twig' %}
{% block body %}


<h1>Inscription</h1>

{{form_start(form)}}
{{form_row(form.username , {'label' : 'Nom d\'utilisateur', 'attr' : {'placeholder' : 'ex : Jezeville'}})}}
{{form_row(form.email, {'label' : 'Adresse email', 'attr' : {'placeholder' : 'ex : symblog@gmail.com'}})}}
